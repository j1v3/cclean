{% extends 'base.html.twig' %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
       <div class="flash">
            {{ flashMessage }}
            <div style="text-align: right">
                <a href="{{ path('home') }}">Retour</a>
            </div>
        </div>
    {% endfor %}
    <div style="padding-top:30px; width: 370px; text-align: center; margin: 0 auto; margin-bottom: -3%">
        <div class="row">
            <div class="col-sm-12 testimonial-title">
                Bienvenue {{ app.user.surname }} {{ app.user.name }}<br />merci de nous laisser votre avis:
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row main">
            <div class="main-login main-center">
                <form action="{{ path('testimonial_new') }}" method="post" {{ form_enctype(form) }}>

                    {{ form_errors(form) }}
                    {{ form_widget(form._token) }}
                    {#{{ form_widget(form.client_id, {'attr': {'value': {{ app.user.id }} }}) }}#}
                    {#<input type="hidden" id="ccleanbundle_testimonial_client_id" value="{{ app.user.id }}">#}
                    <div class="form-group">
                        <div class="cols-sm-10">
                            <label for="name" class="cols-sm-2 control-label" style="display: inline">{{ form_label(form.comment) }}</label>
                            <div class="input-group">

                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                {{ form_widget(form.comment) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="cols-sm-10">
                            <label for="name" class="cols-sm-2 control-label" style="display: inline">{{ form_label(form.note) }}</label>
                            <div class="input-group">

                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                {{ form_widget(form.note) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group ">
                        <input type="submit" id="button" value="PrÃ©-visualiser" class="btn btn-primary btn-lg btn-block submit-button">
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock %}
