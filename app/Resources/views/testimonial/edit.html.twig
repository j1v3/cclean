{% extends 'base.html.twig' %}

{% block body %}
    <div style="padding-top:30px; width: 370px; text-align: center; margin: 0 auto; margin-bottom: -3%">
        <div class="row">
            <div class="col-sm-12 testimonial-title">
                Modifiez votre avis:
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row main">
            <div class="main-login main-center">
                <form action="{{ path('testimonial_edit', { 'id': id }) }}" method="post">

                    {{ form_start(edit_form) }}
                    {{ form_errors(edit_form) }}
                    {{ form_widget(edit_form._token) }}
                    {#{{ form_widget(form.client_id, {'attr': {'value': {{ app.user.id }} }}) }}#}
                    {#<input type="hidden" id="ccleanbundle_testimonial_client_id" value="{{ app.user.id }}">#}
                    <div class="form-group">
                        <div class="cols-sm-10">
                            <label for="name" class="cols-sm-2 control-label" style="display: inline">{{ form_label(edit_form.comment) }}</label>
                            <div class="input-group">

                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                {{ form_widget(edit_form.comment) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="cols-sm-10">
                            <label for="name" class="cols-sm-2 control-label" style="display: inline">{{ form_label(edit_form.note) }}</label>
                            <div class="input-group">

                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                {{ form_widget(edit_form.note) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group ">
                        <input type="submit" id="button" value="Modifier" class="btn btn-primary btn-lg btn-block submit-button">
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock %}
